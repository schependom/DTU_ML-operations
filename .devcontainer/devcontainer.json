// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "ml_ops",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "image": "mcr.microsoft.com/devcontainers/base:bullseye",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12"
        }
    },
    "runArgs": [
        "--shm-size=8gb" // Critical for ML DataLoaders to prevent crashes
        // This increases the shared memory size to 8GB
    ],
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "bash .devcontainer/post_create.sh",

    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python", "editorconfig.editorconfig"],
            "settings": {
                "python.testing.pytestArgs": ["tests"],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.defaultInterpreterPath": "/workspaces/ml_ops/.venv/bin/python",
                "python.testing.pytestPath": "/workspaces/ml_ops/.venv/bin/pytest"
            }
        }
    }
}
